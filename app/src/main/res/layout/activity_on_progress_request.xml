<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.magsood.medappuser.Activity.SendRequest"
    android:layoutDirection="rtl">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/transparent">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:background="@drawable/top_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/r2">
                    <LinearLayout
                        android:layout_marginRight="@dimen/margin_large_size"
                        android:layout_marginLeft="@dimen/margin_large_size"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الطلب"
                            android:textSize="35sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الحالي"
                            android:textSize="41sp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


            <androidx.appcompat.widget.Toolbar
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_collapseMode="pin"
                >
                <RelativeLayout
                    android:background="@color/colorPrimary"
                    android:id="@+id/r1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ic_back"
                        android:background="@drawable/shape_back_circle"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_arrow_back"/>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/white"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"/>
                        <View
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/white"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"/>
                        <View
                            android:layout_gravity="right"
                            android:layout_marginTop="5dp"
                            android:layout_width="15dp"
                            android:layout_height="1dp"
                            android:background="@android:color/white"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl">
                <RelativeLayout
                    android:background="@drawable/btn_bg_rounded_green10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="17.5dp"
                    android:minHeight="61dp">
                    <TextView
                        android:id="@+id/txt1"
                        android:layout_marginTop="@dimen/margin_normal_size"
                        android:background="@drawable/btn_bg_blue"
                        android:paddingRight="@dimen/margin_normal_size"
                        android:paddingLeft="@dimen/margin_normal_size"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="123456"
                        android:layout_marginRight="@dimen/margin_normal_size"
                        android:layout_marginLeft="@dimen/margin_normal_size"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/shape_bg_2radius"
                        android:paddingRight="@dimen/margin_normal_size"
                        android:paddingLeft="@dimen/margin_normal_size"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="250 ج س"
                        android:textColor="@android:color/white"/>

                    <LinearLayout
                        android:layout_marginBottom="40dp"
                        android:layout_marginTop="@dimen/margin_large_size"
                        android:layout_below="@+id/txt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#808080"
                            android:layout_marginLeft="@dimen/margin_large_size"
                            android:layout_marginRight="@dimen/margin_large_size"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <androidx.constraintlayout.widget.Guideline
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.5"
                                android:id="@+id/g1"/>
                            <LinearLayout
                                android:layout_marginRight="@dimen/margin_large_size"
                                android:layout_marginLeft="@dimen/margin_large_size"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/g1">
                                <TextView
                                    android:layout_marginRight="@dimen/margin_normal_size"
                                    android:layout_marginLeft="@dimen/margin_normal_size"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="صيدلية يقين"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/txt_normal_size"/>
                            </LinearLayout>


                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_marginRight="@dimen/margin_large_size"
                                android:layout_marginLeft="@dimen/margin_large_size"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                app:layout_constraintRight_toLeftOf="@+id/g1"
                                app:layout_constraintLeft_toLeftOf="parent">
                                <ImageView
                                    android:scaleType="center"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_check"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/shape_circle_green"/>
                                <TextView
                                    android:layout_marginRight="@dimen/margin_normal_size"
                                    android:layout_marginLeft="@dimen/margin_normal_size"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="تم"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/txt_normal_size"/>
                            </LinearLayout>



                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <androidx.constraintlayout.widget.Guideline
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.5"
                                android:id="@+id/g2"/>
                            <LinearLayout
                                android:layout_marginRight="@dimen/margin_large_size"
                                android:layout_marginLeft="@dimen/margin_large_size"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/g2">
                                <TextView
                                    android:layout_marginRight="@dimen/margin_normal_size"
                                    android:layout_marginLeft="@dimen/margin_normal_size"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="صيدلية يقين"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/txt_normal_size"/>
                            </LinearLayout>


                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_marginRight="@dimen/margin_large_size"
                                android:layout_marginLeft="@dimen/margin_large_size"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                app:layout_constraintRight_toLeftOf="@+id/g2"
                                app:layout_constraintLeft_toLeftOf="parent">
                                <ImageView
                                    android:scaleType="center"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_check"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/shape_circle_green"/>
                                <TextView
                                    android:layout_marginRight="@dimen/margin_normal_size"
                                    android:layout_marginLeft="@dimen/margin_normal_size"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="تم"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/txt_normal_size"/>
                            </LinearLayout>



                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <androidx.constraintlayout.widget.Guideline
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.5"
                                android:id="@+id/g3"/>
                            <LinearLayout
                                android:layout_marginRight="@dimen/margin_large_size"
                                android:layout_marginLeft="@dimen/margin_large_size"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toRightOf="@+id/g3">
                                <TextView
                                    android:layout_marginRight="@dimen/margin_normal_size"
                                    android:layout_marginLeft="@dimen/margin_normal_size"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="صيدلية يقين"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/txt_normal_size"/>
                            </LinearLayout>


                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_marginRight="@dimen/margin_large_size"
                                android:layout_marginLeft="@dimen/margin_large_size"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                app:layout_constraintRight_toLeftOf="@+id/g3"
                                app:layout_constraintLeft_toLeftOf="parent">
                                <ProgressBar
                                    android:scaleType="center"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_check"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"/>
                                <TextView
                                    android:layout_marginRight="@dimen/margin_normal_size"
                                    android:layout_marginLeft="@dimen/margin_normal_size"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="تم"
                                    android:textColor="@color/colorPrimary"
                                    android:gravity="center_vertical"
                                    android:textSize="@dimen/txt_normal_size"/>
                            </LinearLayout>



                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#808080"
                            android:layout_marginLeft="@dimen/margin_large_size"
                            android:layout_marginRight="@dimen/margin_large_size"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp">
                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profile_image"
                                    android:layout_width="65dp"
                                    android:layout_height="65dp"
                                    app:civ_border_width="0dp"
                                    app:civ_border_color="#FF000000"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_user"
                                    android:background="@drawable/shape_circle_green"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_marginRight="@dimen/margin_normal_size"
                                        android:layout_marginLeft="@dimen/margin_normal_size"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="محمد بابكر"
                                        android:textColor="@color/colorPrimary"
                                        android:gravity="center_vertical"
                                        android:textSize="@dimen/txt_large_size"
                                        android:textStyle="bold"/>
                                    <TextView
                                        android:layout_marginRight="@dimen/margin_normal_size"
                                        android:layout_marginLeft="@dimen/margin_normal_size"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="0925510574"
                                        android:textColor="@color/colorPrimary"
                                        android:gravity="center_vertical"
                                        android:textSize="@dimen/txt_normal_size"/>

                                </LinearLayout>


                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>


                </RelativeLayout>
                <ImageView
                    android:src="@drawable/ic_arrow_down"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_circle_green"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>