<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl">
    <include layout="@layout/public_toolbar"
        android:id="@+id/toolbar"/>
    <fragment
        android:layout_below="@+id/toolbar"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.MapsActivity" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn"
        android:layout_marginTop="@dimen/margin_normal_size"
        android:textColor="@color/red"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="الغاء"
        android:textSize="@dimen/txt_large_size"
        android:background="@drawable/btn_bg_white_2radius"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/margin_normal_size"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal_size"
        android:layout_marginRight="@dimen/margin_small_size"
        android:layout_marginLeft="@dimen/margin_small_size"
        app:cardBackgroundColor="@color/cardColor">
        <LinearLayout
            android:layout_margin="@dimen/txt_small_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginRight="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_large_size"
                    android:text="صيدلية مكة"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:cardCornerRadius="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true">
                    <TextView
                        android:layout_marginLeft="@dimen/margin_normal_size"
                        android:layout_marginRight="@dimen/margin_normal_size"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_small_size"
                        android:text="200 ج س"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="الحالة"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="تم قبولة"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="كود الطلب"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="12352"/>
            </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_small_size"
            android:layout_marginRight="@dimen/margin_small_size">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@android:color/black"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="صيدلية يقين"/>
                <TextView
                    android:drawablePadding="@dimen/margin_small_size"
                    app:drawableRightCompat="@drawable/ic_request_done"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="تم الاستلام"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="صيدلية المك"/>
                <TextView
                    android:drawablePadding="@dimen/margin_small_size"
                    app:drawableRightCompat="@drawable/ic_request_done"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="تم الاستلام"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="صيدلية شفاء"/>
                <TextView
                    android:drawablePadding="@dimen/margin_small_size"
                    app:drawableRightCompat="@drawable/ic_on_progress"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_normal_size"
                    android:text="لم يتم الاستلام" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@android:color/black"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginRight="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_small_size">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_user"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/img_user"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginRight="@dimen/margin_small_size">
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/txt_normal_size"
                        android:text="اسم الكابتن"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/txt_normal_size"
                        android:text="0925510574"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/showDetails"
                android:layout_margin="@dimen/margin_normal_size"
                android:layout_width="200dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_marginRight="@dimen/margin_normal_size"
                    android:layout_marginLeft="@dimen/margin_normal_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/imgHideDet"
                        android:src="@drawable/ic_hide_details"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/txtShowDet"
                        android:layout_marginLeft="@dimen/margin_normal_size"
                        android:layout_marginRight="@dimen/margin_normal_size"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_large_size"
                        android:text="تفاصيل"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>

