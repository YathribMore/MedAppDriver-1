<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:layout_margin="@dimen/margin_small_size"
    android:padding="@dimen/margin_small_size"
    app:cardCornerRadius="@dimen/margin_normal_size">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/btnLay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_place_808080"/>
                <TextView
                    android:id="@+id/txtShowMap"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/txt_small_size"
                    android:text="عرض في الخريطة"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_normal_size"
                    android:layout_marginLeft="@dimen/margin_normal_size"/>

            </LinearLayout>
            <LinearLayout
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_delete"/>

                <TextView
                    android:id="@+id/del"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_normal_size"
                    android:layout_marginRight="@dimen/margin_normal_size"
                    android:gravity="center_vertical"
                    android:text="حذف"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/txt_small_size"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_above="@+id/btnLay">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/price"
                    android:layout_margin="@dimen/margin_small_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 ج س"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_large_size"
                    android:textColor="@color/colorAccent"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:id="@+id/med_name"
                    android:layout_margin="@dimen/margin_small_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اسم الدواء"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_large_size"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="@dimen/margin_small_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الصيدلية"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_normal_size"/>

                <TextView
                    android:id="@+id/ph_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small_size"
                    android:text="صيدلية المك"
                    android:textSize="@dimen/txt_normal_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="@dimen/margin_small_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الموقع"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_normal_size"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small_size"
                    android:text="الخرطوم شارع الستين محطة الفردوس"
                    android:textSize="@dimen/txt_normal_size" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>